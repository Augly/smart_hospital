<view class='chatWrap'>
  <view class='chatList' wx:for="{{chatList}}" wx:for-item="item" wx:for-index="index" wx:if="{{item.id==uid}}">
    <image class='chatLogo' src='{{item.avtar}}'></image>
    <view class='chatRes'>{{item.content}}</view>
  </view>

  <view class='chatListSelf' wx:for="{{chatList}}" wx:for-item="item" wx:for-index="index" wx:if="{{item.id!=uid}}">
     <view class='chatRes'>{{item.content}}</view>
     <image class='chatLogo' src='{{item.avtar}}'></image>
  </view>

</view>

<view class='bottomIpt'>
  <input class='ipt'></input>
  <view class='send'>
    <span class='iconfont icon-fasong'></span>
  </view>
</view>