
<view class='wrap'>
  <view class='item' wx:for="{{list}}" wx:for-itwm='item' wx:for-index="index">
    <image class='logo' src='{{item.avtar}}'></image>
    <view class='res'>
      <view class='res_left'>
        <view class='d_name'>
          {{item.name}}
        </view>
        <view class='d_k'>
          <text class='ks'>{{item.ks}}</text>
          <text class='z_do'>{{item.zw}}</text>
        </view>
        <view class='adder'>{{item.adder}}</view>
        <view class='buttonGroup'>
          <view class='look' bindtap='toRes' data-id='{{item.id}}'>查看医生</view>
          <view class='ask' bindtap='tochat' data-id='{{item.id}}'>快速询问</view>
        </view>
      </view>
      <view class='res_right'>
        <view class='res_right_title'>
          已回答{{item.askNum}}位患者
        </view>
        <view class='starGroup'>
          <span class="iconfont {{myindex<item.gold?'icon-xingxing':'icon-xingxingxian'}}"   wx:for="{{starList}}" wx:for-index="myindex" wx:for-item="myitem"></span>
          <view class='gold'>{{item.gold}}.0</view>
        </view>
      </view>
    </view>
  </view>
</view>