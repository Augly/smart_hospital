<view wx:if="{{show}}">
  <view>
    <view class='notitle'>
      <i class='iconfont icon-xiangjipaizhao' bindtap='changesA'></i>
    </view>
    <view class='avtarWrap'>
      <image src='{{allData.user_portrait}}' class='avater'></image>
    </view>

    <view class='title'>
      {{allData.user_nickname}}
    </view>


    <view class='list'>
      <view class='item'>
        <view class='left'>
          <span class='iconfont icon-man-copy'></span>
          <view class='itemTitle'>我的昵称</view>
        </view>
        <view class='right'>
          <input class='name' value='{{allData.user_nickname}}' bindinput='getName'></input>
        </view>
      </view>
      <view class='item'>
        <view class='left'>
          <span class='iconfont icon-phone'></span>
          <view class='itemTitle'>我的手机</view>
        </view>
        <view class='right'>
          <view class='itemmintitle'>{{allData.user_phone}}</view>
        </view>
      </view>
      <view class='item' bindtap='toRegistration'>
        <view class='left'>
          <span class='iconfont icon-wendang'></span>
          <view class='itemTitle'>挂号列表</view>
        </view>
        <view class='right'>
          <span class='iconfont icon-jiantou'></span>
        </view>
      </view>
      <view class='item' bindtap='toPatient'>
        <view class='left'>
          <span class='iconfont icon-gerenxinxi'></span>
          <view class='itemTitle'>就诊人管理</view>
        </view>
        <view class='right'>
          <span class='iconfont icon-jiantou'></span>
        </view>
      </view>
      <view class='item' bindtap='tomyDoctor'>
        <view class='left'>
          <span class='iconfont icon-yisheng'></span>
          <view class='itemTitle'>我的医生</view>
        </view>
        <view class='right'>
          <span class='iconfont icon-jiantou'></span>
        </view>
      </view>
    </view>

    <view class='exit' bindtap='out'>
      退 出 登 录
    </view>
  </view>
</view>