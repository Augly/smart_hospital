<view class='headGroup'>
  <view class="headItem {{selectIndex==index?'active':''}}" wx:for="{{dataList}}" wx:for-index="index" wx:for-item="item" bindtap='selectDay' data-index="{{index}}">
    <view class='day'>{{item.mon}}</view>
    <view class='date'>{{item.date}}</view>
  </view>
</view>

<view class='content'>
  <view class='item' wx:for="{{doctorList}}" wx:for-index="index" wx:for-item="item" wx:key>
    <view class='itemHead'>
    <image class="headLogo" src='https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1544422030851&di=6f08e3e4bb29548302a95f5c4892f79c&imgtype=jpg&src=http%3A%2F%2Fimg2.imgtn.bdimg.com%2Fit%2Fu%3D2177114997%2C30575453%26fm%3D214%26gp%3D0.jpg'></image>
      <view class='headTitle'>
        <view class='title'>
          {{item.doctor_name}}
          <span class='minTitle'>{{item.subjects_name}}</span>
          <!-- <span class='minTitle'>心脏科</span> -->
        </view>
        <view class='adder'>{{item.clinic_name}}</view>
      </view>
      <view class='bottonGroup' bindtap='toRes' data-id='{{item.doctor_id}}' data-timeid='{{item.office_time_id}}'>前往挂号</view>
    </view>
    <view class='itemOther'>
      <view class='otherHead'>工作时间</view>
      <view class='otherData'>星期三
        <span>{{item.office_time}}</span>
      </view>
    </view>
  </view>
</view>