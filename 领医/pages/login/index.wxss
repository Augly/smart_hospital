/**index.wxss**/
page{
  position: relative;
  height: 100%;
}
.container{
  width: 100%;
  min-height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: 0 0;
  margin-top: 0rpx;
  overflow: hidden;
}

.market{
  margin: 233rpx auto 0 auto;
  text-align: center;
}
.market-main{
  height: 76rpx;
  line-height: 70rpx;
  font-size: 80rpx;
  font-family: FZLTDHK--GBK1-0;
  font-weight: 400;
  color: rgba(255,255,255,1);
}
.market-minor{
  height:  25rpx;
  line-height: 25rpx;
  font-size: 30rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(255,255,255,1);
  margin-top: 17rpx;
}

.login{
  margin-top: 68rpx;
  padding: 0 80rpx;
}
.login-group{
  width: 100%;
  margin-top: 72.5rpx;
  padding-top: 12.5rpx;
  position: relative;
}
.login-group-submit{
  margin-top: 141rpx;
  padding-top: 12rpx;
}
.login-label{
  height: 25rpx;
  line-height: 25rpx;
  font-size: 26rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(255,255,255,1);
  margin-bottom: 25rpx;
  padding-left: 6rpx;
}
.login-input{
  height: 45rpx;
  padding-left: 7rpx;
  border-bottom: 6rpx solid rgba(250,250,250,1);
  border-radius: 3rpx;
  font-size: 26rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(218,218,218,1);
}

.login-input:hover{
  border-bottom-color: rgba(99,223,197,1);
}
.login-button{
  width: 100%;
  height: 103rpx;
  line-height: 95rpx;
  border: 4rpx solid rgba(99,223,197,1);
  border-radius: 8rpx;
  background: transparent;
  color:rgba(99,223,197,1);
  font-size: 26rpx;
  font-weight:bold;
  font-family:MicrosoftYaHei-Bold;
}
.login-button-send{
  position: absolute;
  top:0rpx;
  right: 0;
  width: 160rpx;
  height: 50rpx;
  line-height: 44rpx;
  border-width: 3rpx;
  font-size: 20rpx;
}