.banner {
  width: 100%;
  height: 345rpx;
  background-color: red;
}

.content {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 28rpx;
}

.subName {
  font-size: 32rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
}

.all text {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  color: rgba(153, 153, 153, 1);
  margin-right: 30rpx;
}

.list {
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
}

.list_head {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  background-color: red;
}

.list_left {
  width: 500rpx;
  margin-left: 23rpx;
}

.title {
  font-size: 26rpx;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
}
.other{
  font-size:22rpx;
font-family:PingFang-SC-Bold;
color:rgba(153,153,153,1);
margin-top: 24rpx;
}
.list_right{
  font-size:24rpx;
font-weight:normal;
color:rgba(153,153,153,1);
margin-left: auto;
}
.list_right .iconfont{
  font-size:24rpx;
font-weight:normal;
color:rgba(153,153,153,1);
}