page{
  background-color: RGBA(243, 243, 243, 1);
}
.chatWrap {
  box-sizing: border-box;
  padding: 50rpx 30rpx 150rpx 30rpx;
}

.bottomIpt {
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  height: 118rpx;
  background-color: rgba(241, 241, 241, 1);
  display: flex;
  justify-content: space-between;
}

.ipt {
  width: 580rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 3rpx 18rpx 3rpx rgba(0, 0, 0, 0.09);
  border-radius: 10rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
}

.send {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 3rpx 18rpx 3rpx rgba(0, 0, 0, 0.09);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 18rpx;
}

.icon-fasong {
  font-size: 48rpx;
  color: RGBA(99, 223, 197, 1);
}

.list {
  border-top:6rpx solid rgba(116, 164, 60, 1); 
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background-color: rgba(255, 255, 255, 1);
  margin-bottom: 30rpx;
}
.self{
  border-top:6rpx solid rgba(254, 119, 122, 1); 
}
.userRes {
  display: flex;
  align-items: center;
}
.avatr {
  width: 100rpx;
  height: 100rpx;
  border-radius :50%;
  background-color: red;
}
.main {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.title {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}
.minTitle {
  font-size: 26rpx;
  font-weight: 400;
  font-family: PingFang-SC-Medium;
  color: rgba(113, 128, 158, 1);
}
.date {
  font-size: 20rpx;
  color: rgba(153, 153, 153, 1);
}

.content{
  margin-top: 20rpx;

}
