<view class="container">
  <view class="switchover">
    <view class='content'>
      <view class="switchover-item  {{clinic_id===value.clinic_id?'switchover-item-hover':''}}" wx:for="{{clinicList}}" wx:for-index="key" wx:for-item="value" bindtap='tochanges' data-name="{{value.clinic_name}}" data-id="{{value.clinic_id}}">
        <view class='switchover-right'>
          <view class="switchover-headline">{{value.clinic_name}}</view>
          <view class="switchover-subhead">
            <view class="switchover-subhead-b">联系电话：
              <span class='mintitle'>{{value.clinic_phone}}</span>
            </view>
          </view>
          <view class="switchover-subhead">
            <view class="switchover-subhead-b">诊所地址:
              <span class='mintitle'>{{value.clinic_phone}}</span>
            </view>
          </view>
        </view>
        <view class='change'>
          查看
          <span class='iconfont icon-jiantou'></span>
        </view>
      </view>

    </view>

  </view>

</view>