
<view class='wrap'>
  <view class="item_head {{selectIndex==index?'item_head_select':''}}" bindtap='select' wx:for="{{list}}" wx:for-index="index" wx:for-item="item" data-id="{{item.id}}" data-index='{{index}}'> 
    <image class='avater'></image>
    <view class='userRes'>
      <view class='name'>{{item.name}}</view>
      <view class='age'>年龄：{{item.age}}岁</view>
      <view class='sex'>性别：{{item.sex}}</view>
    </view>
    <view class='change'>
      选择
     <span class='iconfont icon-jiantou'></span>
    </view>
  </view>
</view>


<view class='add' bindtap='addUser' data-type='add'>
    增加就诊人
</view>