.message {
  width: 690rpx;
  height: 219rpx;
  background: rgba(255, 254, 255, 1);
  box-shadow: 0rpx 3rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.message-item {
  padding: 34rpx 128rpx 34rpx 30rpx;
  position: relative;
}

.message-title {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.message-brief {
  height: 24rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(102, 102, 102, 1);
  margin-top: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.message-right {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  z-index: 200;
}

.message-reminder {
  position: absolute;
  top: 36rpx;
  right: 50rpx;
  width: 24rpx;
  height: 24rpx;
  background: rgba(255, 0, 0, 1);
  border-radius: 50%;
}

.message-date {
  position: absolute;
  right: 30rpx;
  bottom: 36rpx;
  height: 20rpx;
  line-height: 20rpx;
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(153, 153, 153, 1);
}

.item {
  width: 100%;
  height: 220rpx;
}

.item_head {
  box-sizing: border-box;
  padding: 0rpx 20rpx;
  width: 100%;
  height: 78rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid rgba(236, 234, 237, 1);
}

.time {
  font-size: 24rpx;
  font-family: SourceHanSansCN-Normal;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.send {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.type {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 72, 102, 1);
}

.item_content {
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 32rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(102, 102, 102, 1);
  overflow: hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.tochat{
  width: 340rpx;
  height: 405rpx;
  /* background-color: red; */
  position: fixed;
  z-index: -10;
  right: 0;
  bottom: 0;
}