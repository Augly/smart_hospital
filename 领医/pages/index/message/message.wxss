.message{
  width: 100%;
}
.message-item{
  padding: 34rpx 128rpx 34rpx 30rpx;
  position: relative;
}
.message-title{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(51,51,51,1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}
.message-brief{
  height: 24rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(102,102,102,1);
  margin-top: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}
.message-right{
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  z-index: 200;
}
.message-reminder{
  position: absolute;
  top: 36rpx;
  right: 50rpx;
  width: 24rpx;
  height: 24rpx;
  background: rgba(255,0,0,1);
  border-radius: 50%;
}
.message-date{
  position: absolute;
  right: 30rpx;
  bottom: 36rpx;
  height: 20rpx;
  line-height: 20rpx;
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(153,153,153,1);
}